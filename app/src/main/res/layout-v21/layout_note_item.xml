<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardUseCompatPadding="true"
    >

  <ImageView
      android:id="@+id/note_detail_image"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:transitionName="@string/transition_backdrop"
      />

  <TextView
      android:id="@+id/note_detail_title"
      android:layout_width="match_parent"
      android:layout_height="?listPreferredItemHeightSmall"
      android:layout_gravity="bottom"
      android:paddingEnd="10dp"
      android:paddingStart="10dp"
      android:gravity="center_vertical"
      android:textAppearance="@style/AppTheme.Item"
      android:background="@drawable/shape_note_item_text_background"/>

</android.support.v7.widget.CardView>